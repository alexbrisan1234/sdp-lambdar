<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wordlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/rectangle_4"
    tools:context=".LaunchActivity"
    >

    <ImageView
        android:layout_width="319dp"
        android:layout_height="233dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_5"
        android:layout_centerHorizontal="true"
        android:contentDescription="Arnold Logo"
        android:id="@+id/logo"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:text="Features"
        android:background="@drawable/normal_button"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/features"
        android:onClick="featuresClicked"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/features"
        android:text="Instructions"
        android:background="@drawable/normal_button"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:fontFamily="@font/opensans_bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/instructions"
        android:onClick="instructionsClicked"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions"
        android:text="Story"
        android:background="@drawable/normal_button"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/story"
        android:onClick="storyClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Powered by Lambda R"
        android:fontFamily="@font/opensans_bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/story"/>


</RelativeLayout>