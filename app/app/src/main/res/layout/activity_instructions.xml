<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lambdar.sdp.arnold.InstructionsActivity"
    android:background="@drawable/rectangle_4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions_title"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensans_bold"
        android:text="Instructions"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/instructions_recycler_view"
        android:layout_below="@id/instructions_title"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Powered by Lambda R"
        android:fontFamily="@font/opensans_bold"
        android:textSize="20sp"
        android:layout_below="@id/instructions_recycler_view"/>

</RelativeLayout>
